#include "main.h"

/**
 *print_last_digit - print the last digit of a number
 *@n: the integer to be checked
 *Return: The value of the last digit
 *
 */
int print_last_digit(int n)
{
	if (n < 0)
	{
		_putchar('0' + (-n % 10));
		return (_putchar('0' + (-n % 10)));
	}
	else if (n == 0)
	{
		_putchar('0' + n);
		return (_putchar('0' + n));
	}
	else if (n > 0)
	{
		_putchar('0' + (n % 10));
		return (_putchar('0' + (n % 10)));
	}
}
